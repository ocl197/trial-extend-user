@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


	<form method="post">
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-primary pl-3">Create Cow</h2>
				<hr />
			</div>
			<div asp-validation-summary="All"></div>
			<div class="mb-3">
				<label asp-for="Cow.TagNo"></label>
			<input asp-for="Cow.TagNo" class="form-control" />
			<span asp-validation-for="Cow.TagNo" class="text-danger"></span>
			</div>
			<div class="mb-3">
			<label asp-for="Cow.FarmId"></label>
			<input asp-for="Cow.FarmId" class="form-control" />
			<span asp-validation-for="Cow.FarmId" class="text-danger"></span>
			</div>
		<div class="mb-3">
			
			<label asp-for="Cow.Breed"></label>
			<input asp-for="Cow.Breed" class="form-control" />
			<span asp-validation-for="Cow.Breed" class="text-danger"></span>
		</div>
			<button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
			<a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back to List</a>

		</div>
</form>

	@section Scripts{
		@{
			<partial name="_ValidationScriptsPartial" />
		}
	}
